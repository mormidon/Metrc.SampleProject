@model ShipTypeModel

<form>
	<input name="model[Id]" type="hidden" value="@Model.Id" />
	<div class="control-group">
		<label class="control-label">Name</label>
		<div class="controls">
			<input class="validate[required]" name="model[Name]" required type="text" value="@Model.Name" />
		</div>
	</div>
	<br />
	<div class="control-group">
		<label class="control-label">Top Speed (multiples of light speed)</label>
		<div class="controls">
			<input class="validate[required]" name="model[TopSpeed]" required type="number" step="0.0001" value="@Model.TopSpeed" />
		</div>
	</div>
	<br />
	<div class="form-actions">
		<button class="btn btn-success shadow" type="submit">@(Model.UpdateModal ? "Update" : "Create") Ship Type</button>
		<button id="cancel" class="btn shadow" type="button">Cancel</button>
	</div>
</form>